    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.4.5",
    "vite": "^5.2.10",
    "vite-plugin-cjs-interop": "^2.1.0",
    "vite-tsconfig-paths": "^4.3.2",
    "vitest": "^1.5.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
